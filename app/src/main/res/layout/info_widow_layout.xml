<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_crop"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingLeft="20sp"
                android:textColor="@color/colorPrimary"
                android:gravity="left|center_horizontal|center_vertical"
                android:text="My Cliic"/>
            <TextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:paddingLeft="20sp"
                android:textSize="12sp"

                android:layout_height="wrap_content"
                android:text="Singapore"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/blueIcon"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/doctorNameLabel"

            android:layout_width="70dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Doctor"/>
        <TextView
            android:id="@+id/doctorNameTv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"

            android:layout_height="wrap_content"
            android:text="Alex "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timingLabel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Opening Time (Mon-Fri)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/timingOneValues"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"

            android:layout_height="wrap_content"
            android:text="9Am-10Pm"/>

            <TextView
                android:id="@+id/timingTwoValues"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"

                android:layout_height="wrap_content"
                android:text="9Am-10Pm"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/contactNoLabel"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Contact Number:"/>
        <TextView
            android:id="@+id/contactNoValue"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="9872469689"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/satLabel"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Sat:"/>
        <TextView
            android:id="@+id/satOpenTv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"

            android:layout_height="wrap_content"
            android:text="Closed"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/sunLabel"

            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Sun:"/>
        <TextView
            android:id="@+id/sunOpenTv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"

            android:layout_height="wrap_content"
            android:text="Closed"/>
    </LinearLayout>



        <Button
            android:id="@+id/clinicType"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Dental"/>

</LinearLayout>